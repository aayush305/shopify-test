  <div class="sticky-header">
    <h2>Collections</h2>
    <ul class="collection-list">
      {% assign collections = "Fresh Fish:Baked Fish:Ground Fish:Seasoning" | split: ":" %}
      {% assign fresh_fish_sub_collections = "Baby Salmon,Fillet,Atlantic Salmon" | split: "," %}

      {% for collection in collections %}
        <li class="collection-item">
          <button class="filter-button" onclick="showSubCollections('{{ collection | handleize }}')">{{ collection }}</button>
        </li>
      {% endfor %}
    </ul>
    <ul class="sub-collection-list hidden" id="sub-collection-list">
      {% for sub_collection in fresh_fish_sub_collections %}
        <li class="sub-collection-item"><button class="filter-button" onclick="filterItems('{{ sub_collection | handleize }}')">{{ sub_collection }}</button></li>
      {% endfor %}
    </ul>
  </div>

